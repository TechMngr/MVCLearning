@model IEnumerable<LeaveTrackerWeb.Models.LeaveModel.HolidayList>

@{

}

<!DOCTYPE html>

<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title>Holidays</title>
</head>
<body>
    <div class="container">
        <p>
            <button class="btn btn-default">@Html.ActionLink("Add Holiday", "Create")</button> 
        </p>
        <table class="table table-responsive table-bordered table-striped">
            <tr>
                <th>
                    @Html.DisplayNameFor(model => model.HolidayDate)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.DateDescription)
                </th>
                <th></th>

            </tr>

            @foreach (var item in Model)
            {
                <tr>
                    <td>
                        @Html.DisplayFor(modelItem => item.HolidayDate.Day) /
                        @Html.DisplayFor(modelItem => item.HolidayDate.Month) /
                        @Html.DisplayFor(modelItem => item.HolidayDate.Year)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.DateDescription)
                    </td>
                    <td>
                        <button class="btn btn-default">@Html.ActionLink("Delete", "Delete", new { id = item.HolidayId })</button>  
                    </td>

                </tr>
            }

        </table>

    </div>

</body>
</html>
