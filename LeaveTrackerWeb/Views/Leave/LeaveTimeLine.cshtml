@model IEnumerable<LeaveTrackerWeb.Models.LeaveModel.LeaveMapping>
    @{ 
        var TimelineCount = 0;
    }
<div style="max-height:500px;overflow:auto">
    <br>
    <ul class="timeline">
        @foreach (var Leave in Model)
        {


            var month = Leave.StartDate.ToString("MMMM");
            var year = Leave.StartDate.Year;
            var barCss = string.Empty;
            var timelineCss = string.Empty;
            if (Leave.UxLeaveTypeId == 5)
            {
                barCss = "success";
            }
            else if (Leave.UxLeaveTypeId == 6)
            {
                barCss = "danger";
            }
            else
            {
                barCss = "warning";
            }
            TimelineCount++;
            if (TimelineCount % 2 == 0)
            {
                timelineCss = "timeline-inverted";
            }

            <li class="@timelineCss">
                <div class="timeline-badge @barCss"><i class="glyphicon glyphicon-check"></i></div>
                <div class="timeline-panel">
                    <div class="timeline-heading">
                        <h4 class="timeline-title">@Leave.MyUxLeaveType.UxLeaveTypeName (@Leave.LeaveCount)</h4>
                        <p><small class="text-muted"><i class="glyphicon glyphicon-time"></i> @month, @year </small></p>
                    </div>
                    <div class="timeline-body">
                        <div class="col-lg-12">
                            <div class="row">
                                <div class="col-md-6">
                                    <p>Start Date: @Leave.StartDate.ToShortDateString()</p>
                                </div>
                                <div class="col-md-6">
                                    <p>End Date: @Leave.EndDate.ToShortDateString()</p>
                                </div>
                            </div>
                            <div class="row">
                                <p>Leave Description : @Leave.LeaveDescription</p>
                            </div>
                        </div>
                    </div>
                </div>
            </li>
        }
    </ul>
</div>
