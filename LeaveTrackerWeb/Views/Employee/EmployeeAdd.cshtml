@model LeaveTrackerWeb.Models.RegisterViewModel
@{
    ViewBag.Title = "EmployeeAdd";
}
<!DOCTYPE html>
<html lang="en">
<head>
    <meta http-equiv="Content-Type" content="text/html; charset=UTF-8">
    <!-- Meta, title, CSS, favicons, etc. -->
    <meta charset="utf-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1">
    <title>Leave Tracker | </title>
    <!-- Bootstrap -->
    <link href="~/Content/bootstrap.min.css" rel="stylesheet" />

    <!-- Font Awesome -->
    <link href="~/Content/font-awesome.min.css" rel="stylesheet" />

    <!-- NProgress -->
    <link href="~/Content/nprogress.css" rel="stylesheet" />


    <!-- Custom Theme Style -->
    <link href="~/Libs/Gentelella/css/custom.css" rel="stylesheet" />


</head>

<div class="center"><button data-toggle="modal" data-target="#squarespaceModal" class="btn btn-primary center-block">Add Employee</button></div>
<div class="modal fade" id="squarespaceModal" tabindex="-1" role="dialog" aria-labelledby="modalLabel" aria-hidden="true">
    <div class="modal-dialog">
        <div class="modal-content">
            <div class="modal-header">
                <button type="button" class="close" data-dismiss="modal"><span aria-hidden="true">×</span><span class="sr-only">Close</span></button>
                <h3 class="modal-title" id="lineModalLabel">Add Employee</h3>
            </div>
            <div class="modal-body">

                <body class="login">
                    <div>
                        <a class="hiddenanchor" id="signup"></a>
                        <a class="hiddenanchor" id="signin"></a>
                        <div class="login_wrapper">
                            <div id="register" class="animate form ">
                                <section class="login_content">
                                    @using (Html.BeginForm("Register", "Account", FormMethod.Post))
                                    {
                                        @Html.AntiForgeryToken()
                                        <h1>Employee Details</h1>
                                        <div>
                                            @Html.TextBoxFor(m => m.Email, new { @class = "form-control", @placeholder = "Email", @required = true, @type = "email" })
                                            @Html.ValidationMessageFor(m => m.Email, "", new { @class = "text-danger" })
                                            @*<input type="email" class="form-control" placeholder="Email" required="" />*@
                                        </div>
                                        <div>
                                            @Html.PasswordFor(m => m.Password, new { @class = "form-control", @placeholder = "Password", @required = true, @type = "password" })
                                            @Html.ValidationMessageFor(m => m.Password, "", new { @class = "text-danger" })
                                        </div>
                                        <div>
                                            @Html.PasswordFor(m => m.ConfirmPassword, new { @class = "form-control", @placeholder = "Confirm Password", @required = true, @type = "password" })
                                            @Html.ValidationMessageFor(m => m.ConfirmPassword, "", new { @class = "text-danger" })
                                        </div>
                                        <div>
                                            @Html.TextBoxFor(m => m.FirstName, new { @class = "form-control", @placeholder = "FirstName", @required = true, @type = "text" })
                                            @Html.ValidationMessageFor(m => m.FirstName, "", new { @class = "text-danger" })
                                        </div>
                                        <div>
                                            @Html.TextBoxFor(m => m.LastName, new { @class = "form-control", @placeholder = "LastName", @required = true, @type = "text" })
                                            @Html.ValidationMessageFor(m => m.LastName, "", new { @class = "text-danger" })
                                        </div>
                                        <div>
                                            @Html.TextBoxFor(m => m.EmployeeNo, new { @class = "form-control", @placeholder = "EmployeeNo", @required = true, @type = "text" })
                                            @Html.ValidationMessageFor(m => m.EmployeeNo, "", new { @class = "text-danger" })
                                        </div>
                                        <div>
                                            @Html.TextBoxFor(m => m.ProjectId, new { @class = "form-control", @placeholder = "ProjectId", @type = "text" })
                                            @Html.ValidationMessageFor(m => m.ProjectId, "", new { @class = "text-danger" })
                                        </div>


                                        <div>
                                            <button type="submit" class="btn btn-default submit">Submit</button>

                                        </div>
                                        
                                    }
                                </section>

                            </div>
                        </div>
                    </div>
                </body>
</html>
            


